{
  "version": 8,
  "name": "World PMTiles Offline",
  "sources": {
    "pmtiles": {
      "type": "vector",
      "url": "pmtiles://world_7.pmtiles",
      "attribution": "Â© OpenStreetMap contributors"
    }
  },
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#f8f4f0"
      }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "pmtiles",
      "source-layer": "water",
      "paint": {
        "fill-color": "#a0c8f0"
      }
    },
    {
      "id": "landcover",
      "type": "fill",
      "source": "pmtiles",
      "source-layer": "landcover",
      "filter": ["==", "class", "grass"],
      "paint": {
        "fill-color": "#e6f2c1"
      }
    },
    {
      "id": "landuse_residential",
      "type": "fill",
      "source": "pmtiles",
      "source-layer": "landuse",
      "filter": ["==", "class", "residential"],
      "paint": {
        "fill-color": "#e4e0db"
      }
    },
    {
      "id": "boundary_country",
      "type": "line",
      "source": "pmtiles",
      "source-layer": "boundary",
      "filter": ["==", "admin_level", 2],
      "paint": {
        "line-color": "#9e9cab",
        "line-width": {
          "base": 1.4,
          "stops": [[4, 0.5], [7, 2]]
        }
      }
    },
    {
      "id": "road_highway",
      "type": "line",
      "source": "pmtiles",
      "source-layer": "transportation",
      "filter": ["==", "class", "motorway"],
      "paint": {
        "line-color": "#ffd959",
        "line-width": {
          "base": 1.4,
          "stops": [[4, 0.5], [7, 3]]
        }
      }
    },
    {
      "id": "place_country",
      "type": "symbol",
      "source": "pmtiles",
      "source-layer": "place",
      "filter": ["==", "class", "country"],
      "layout": {
        "text-field": "{name}",
        "text-font": ["Open Sans Semibold"],
        "text-size": {
          "base": 1.2,
          "stops": [[2, 10], [6, 16]]
        }
      },
      "paint": {
        "text-color": "#333333",
        "text-halo-color": "#ffffff",
        "text-halo-width": 2
      }
    },
    {
      "id": "place_city",
      "type": "symbol",
      "source": "pmtiles",
      "source-layer": "place",
      "filter": ["==", "class", "city"],
      "layout": {
        "text-field": "{name}",
        "text-font": ["Open Sans Semibold"],
        "text-size": {
          "base": 1.1,
          "stops": [[5, 8], [8, 16]]
        }
      },
      "paint": {
        "text-color": "#333333",
        "text-halo-color": "#ffffff",
        "text-halo-width": 2
      }
    }
  ]
}